{
  "name": "matrixorigin.io",
  "type": "module",
  "scripts": {
    "lint": "node ./scripts/fixPunctuation && npx markdownlint-cli2 './docs/MatrixOne/**/*.md'",
    "lint:fix": "node ./scripts/fixPunctuation --fix && npx markdownlint-cli2-fix './docs/MatrixOne/**/*.md'",
    "check:links": "find docs/MatrixOne -name '*.md' -print0 | xargs -0 -n1 markdown-link-check -c .markdown-link-check.json",
    "check:links:quiet": "find docs/MatrixOne -name '*.md' -print0 | xargs -0 -n1 markdown-link-check -q -c .markdown-link-check.json",
    "check:links:sample": "find docs/MatrixOne -name '*.md' | head -10 | xargs -n1 markdown-link-check -c .markdown-link-check.json",
    "check:links:changed": "git diff --name-only origin/main | grep '\\.md$' | xargs -r markdown-link-check -c .markdown-link-check.json",
    "validate-docs": "node ./scripts/doc-validator/index.js",
    "validate-docs:changed": "node ./scripts/doc-validator/index.js --changed-only",
    "validate-docs:sample": "node ./scripts/doc-validator/index.js --limit 50",
    "validate-docs:quick": "node ./scripts/doc-validator/index.js --limit 10",
    "validate-docs:execution": "node ./scripts/doc-validator/index.js --check=execution",
    "validate-docs:execution:changed": "node ./scripts/doc-validator/index.js --check=execution --changed-only",
    "validate-docs:all": "node ./scripts/doc-validator/index.js --check=all",
    "mo:start": "bash ./scripts/mo-test-env.sh start",
    "mo:stop": "bash ./scripts/mo-test-env.sh stop",
    "mo:status": "bash ./scripts/mo-test-env.sh status",
    "mo:test": "bash ./scripts/mo-test-env.sh test"
  },
  "devDependencies": {
    "commander": "^12.0.0",
    "fast-glob": "^3.2.12",
    "markdown-link-check": "^3.14.2",
    "markdownlint-cli2": "^0.6.0",
    "mysql2": "^3.9.0",
    "node-sql-parser": "^5.3.0"
  }
}
